<?xml version="1.0"?>
<configuration>
    <configSections>
        <sectionGroup name="userSettings" type="System.Configuration.UserSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
            <section name="GrandSeal.GrandSeal" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" allowExeDefinition="MachineToLocalUser" requirePermission="false" />
        </sectionGroup>
    </configSections>
    <startup>
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
    </startup>
    <system.diagnostics>
        <sharedListeners>            
            <add name="All" type="CarbonCore.Utils.Diagnostics.FileTraceListener, CarbonCore.Utils" initializeData="Logs\{GameName}.All.log" rotateFiles="true" maxRotation="5" template="{CoreTime}\t{Source}({ThreadId})\t{EventType}\t{Id}\t{Message}"/>
            
            <add name="EngineOnly" type="CarbonCore.Utils.Diagnostics.FileTraceListener, CarbonCore.Utils" initializeData="Logs\{GameName}.Engine.log" rotateFiles="true" maxRotation="5" template="{CoreTime}\t{Source}({ThreadId})\t{EventType}\t{Id}\t{Message}"/>
            
            <add name="Game" type="CarbonCore.Utils.Diagnostics.FileTraceListener, CarbonCore.Utils" initializeData="Logs\{GameName}.log" rotateFiles="true" maxRotation="5" template="{CoreTime}\t{Source}({ThreadId})\t{EventType}\t{Id}\t{Message}"/>

            <add name="Console" type="CarbonCore.Utils.Diagnostics.ConsoleTraceListener, CarbonCore.Utils" template="{CoreTime}\t({ThreadId})\t{Message}"/>
        </sharedListeners>

        <trace autoflush="true">
            <listeners>
                <clear/>
                <add name="All"/>
                <add name="Console"/>
            </listeners>
        </trace>
        
        <sources>
            
            <source name="GrandSeal" switchValue="All">
                <listeners>
                    <clear/>
                    <add name="All"/>
                    <add name="Console"/>
                    <add name="Game"/>
                </listeners>
            </source>
            
            <source name="Core.Engine" switchValue="All">
                <listeners>
                    <clear/>
                    <add name="All"/>
                    <add name="Console"/>
                    <add name="EngineOnly"/>
                </listeners>
            </source>     
        </sources>
    </system.diagnostics>
    <userSettings>
        <GrandSeal.GrandSeal>
            <setting name="ResolutionX" serializeAs="String">
                <value>1024</value>
            </setting>
            <setting name="ResolutionY" serializeAs="String">
                <value>768</value>
            </setting>
            <setting name="Windowed" serializeAs="String">
                <value>True</value>
            </setting>
        </GrandSeal.GrandSeal>
    </userSettings>
</configuration>
