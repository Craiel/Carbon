<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
    </configSections>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
  <system.diagnostics>
    <sharedListeners>
      <add name="All"
        type="Core.Utils.Diagnostics.FileTraceListener, Core.Utils"
        initializeData="Logs\GrandSeal.DataDemon.All.log"
        rotateFiles="true"
        maxRotation="5"
        template="{CoreTime}\t{Source}({ThreadId})\t{EventType}\t{Id}\t{Message}"/>

      <add name="EngineOnly"
        type="Core.Utils.Diagnostics.FileTraceListener, Core.Utils"
        initializeData="Logs\GrandSeal.DataDemon.Engine.log"
        rotateFiles="true"
        maxRotation="5"
        template="{CoreTime}\t{Source}({ThreadId})\t{EventType}\t{Id}\t{Message}"/>

      <add name="Game"
        type="Core.Utils.Diagnostics.FileTraceListener, Core.Utils"
        initializeData="Logs\GrandSeal.DataDemon.log"
        rotateFiles="true"
        maxRotation="5"
        template="{CoreTime}\t{Source}({ThreadId})\t{EventType}\t{Id}\t{Message}"/>

      <add name="Console"
           type="Core.Utils.Diagnostics.ConsoleTraceListener, Core.Utils"
           template="{CoreTime}\t({ThreadId})\t{Message}"/>
    </sharedListeners>

    <trace autoflush="true" >
      <listeners>
        <clear/>
        <add name="All" />
        <add name="Console" />
      </listeners>
    </trace>

    <sources>

      <source name="GrandSeal.DataDemon" switchValue="All">
        <listeners>
          <clear />
          <add name="All" />
          <add name="Console" />
          <add name="Game" />
        </listeners>
      </source>

      <source name="Core.Engine" switchValue="All">
        <listeners>
          <clear />
          <add name="All" />
          <add name="Console" />
          <add name="EngineOnly" />
        </listeners>
      </source>
    </sources>
  </system.diagnostics>
</configuration>