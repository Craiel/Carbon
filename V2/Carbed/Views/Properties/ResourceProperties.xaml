<UserControl x:Class="Carbed.Views.Properties.ResourceProperties"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Converters.xaml"/>
                <ResourceDictionary Source="/Resources/EnumProviders.xaml"/>
                <ResourceDictionary Source="/Resources/PropertyControls.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel>
        <ContentControl Content="{Binding}" ContentTemplate="{StaticResource DocumentPropertyTemplate}"/>

        <Expander Header="Source" IsExpanded="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Type" Margin="4" VerticalAlignment="Center"/>
                <ComboBox Grid.Column="1" Margin="2" ItemsSource="{Binding Source={StaticResource ResourceTypes}}" SelectedItem="{Binding Path=Type}"/>

                <TextBlock Text="Source" Margin="4" VerticalAlignment="Center" Grid.Row="1"/>
                <DockPanel Grid.Column="1" Margin="2" Grid.Row="1">
                    <Button Command="{Binding Path=CommandSelectFile}" Content="..." DockPanel.Dock="Right" Width="20" Height="20"/>
                    <TextBox Text="{Binding Path=SourcePath, Mode=OneWay}" IsReadOnly="True" VerticalAlignment="Center"/>
                </DockPanel>

                <TextBlock Text="{Binding Path=LastChangeDate}" Grid.Row="2" Grid.ColumnSpan="2" Margin="4, 2, 2, 2"/>
            </Grid>
        </Expander>
    </StackPanel>
</UserControl>
